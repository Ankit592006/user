#include <iostream>
using namespace std;

void merge(int arr[], int l, int mid, int r) {
    int n1 = mid - l + 1;
    int n2 = r - mid;

    int A[n1], B[n2];

    for(int i = 0; i < n1; i++)
        A[i] = arr[l + i];

    for(int i = 0; i < n2; i++)
        B[i] = arr[mid + 1 + i];

    int i = 0, j = 0, k = l;

    while(i < n1 && j < n2) {
        if(A[i] <= B[j])
            arr[k++] = A[i++];
        else
            arr[k++] = B[j++];
    }

    while(i < n1)
        arr[k++] = A[i++];

    while(j < n2)
        arr[k++] = B[j++];
}

void mergeSort(int arr[], int l, int r) {
    if(l < r) {
        int mid = (l + r) / 2;

        mergeSort(arr, l, mid);
        mergeSort(arr, mid + 1, r);

        merge(arr, l, mid, r);
    }
}

int main() {
    int arr[5] = {8, 3, 1, 7, 2};

    cout << "Before Sorting: ";
    for(int i = 0; i < 5; i++)
        cout << arr[i] << " ";

    mergeSort(arr, 0, 4);

    cout << "\nAfter Sorting: ";
    for(int i = 0; i < 5; i++)
        cout << arr[i] << " ";

    return 0;
}
